<%- include('userheader') %>

<div class="container-fluid my-5">
  <div class="row g-4 justify-content-start">
    <% data.map((item) => { %>
      <div class="col-md-4 col-lg-3">
        <div class="card border border-dark h-100">
          <img src="<%= item.image %>" class="card-img-top" alt="Product Image" style="height: 200px; object-fit:contain">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= item.product %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text fw-bold">â‚¹<%= item.price %></p>

            
            <form action="/user/addtocart/<%= item._id %>" method="post" class="mb-2">
              <div class="input-group">
                <input type="number" class="form-control" name="count" value="1" min="1">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
              </div>
            </form>

            <form action="/user/order" method="post" class="mb-2">
              <input type="hidden" name="id" value="<%= item._id %>">
              <div class="input-group">
                <input type="number" name="count" class="form-control" value="1" min="1">
                <button type="submit" class="btn btn-success">Order Now</button>
              </div>
            </form>

         
            <a href="/user/complaint/<%= item._id %>" class="btn btn-outline-danger mt-auto">Raise Complaint</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('footer') %>
